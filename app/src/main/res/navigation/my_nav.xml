<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.example.colorgame.ui.intro.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/navigate_to_gamePlayFragment"
            app:destination="@id/gamePlayFragment">
        <argument
            android:name="gameMode"
            app:argType="string"
            android:defaultValue="hundredSec" />
        </action>
        <argument
            android:name="gameMode"
            app:argType="string"
            android:defaultValue="hundredSec" />
        <action
            android:id="@+id/navigateToMultiplayerFragment"
            app:destination="@id/multiplierFragment" />
    </fragment>

    <fragment
        android:id="@+id/gamePlayFragment"
        android:name="com.example.colorgame.ui.mainMode.GamePlayFragment"
        android:label="fragment_game_play"
        tools:layout="@layout/fragment_game_play" >
        <action
            android:id="@+id/navigateToCongratsFragment"
            app:destination="@id/congratsFragment"
            app:popUpTo="@id/introFragment">
            <argument
                android:name="score"
                android:defaultValue="0"
                app:argType="integer" />
            <argument
                android:name="gameMode"
                app:argType="string"
                android:defaultValue="hundredSec" />
        </action>

        <action
            android:id="@+id/navigateToTryAgainFragment"
            app:destination="@id/tryAgainFragment"
            app:popUpTo="@id/introFragment">
            <argument
                android:name="score"
                android:defaultValue="0"
                app:argType="integer" />
            <argument
                android:name="gameMode"
                app:argType="string"
                android:defaultValue="hundredSec" />
        </action>

        <argument
            android:name="score"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="gameMode"
            app:argType="string"
            android:defaultValue="hundredSec" />

    </fragment>

    <fragment
        android:id="@+id/tryAgainFragment"
        android:name="com.example.colorgame.ui.results.TryAgainFragment"
        android:label="fragment_try_again"
        tools:layout="@layout/fragment_try_again" >
        <action
            android:id="@+id/navigateFromTryAgainToResultsFragment"
            app:destination="@id/resultsFragment"
            app:popUpTo="@id/introFragment">
            <argument
                android:name="gameMode"
                android:defaultValue="hundredeSec"
                app:argType="string" />
        </action>
        <argument
            android:name="gameMode"
            app:argType="string"
            android:defaultValue="hundredeSec" />
    </fragment>

    <fragment
        android:id="@+id/congratsFragment"
        android:name="com.example.colorgame.ui.results.CongratsFragment"
        android:label="fragment_congrats"
        tools:layout="@layout/fragment_congrats" >
        <action
            android:id="@+id/navigateFromCongratsToResultsFragment"
            app:destination="@id/resultsFragment"
            app:popUpTo="@id/introFragment">
            <argument
                android:name="gameMode"
                android:defaultValue="hundredSec"
                app:argType="string" />
        </action>
        <argument
            android:name="gameMode"
            app:argType="string"
            android:defaultValue="hundredSec" />
    </fragment>
    <fragment
        android:id="@+id/resultsFragment"
        android:name="com.example.colorgame.ui.results.ResultsFragment"
        android:label="fragment_results"
        tools:layout="@layout/fragment_results" >
        <action
            android:id="@+id/navigateToIntroFragment"
            app:destination="@id/introFragment" />
    </fragment>
    <fragment
        android:id="@+id/multiplierFragment"
        android:name="com.example.colorgame.ui.multiplayerMode.MultiplayerSetupFragment"
        android:label="fragment_multiplier"
        tools:layout="@layout/fragment_multiplier">
        <action
            android:id="@+id/navigateToMultiplayerGamePlayFragment"
            app:destination="@id/multiplayerGamePlayFragment"
            app:popUpTo="@id/introFragment">
            <argument
                android:name="myUserName"
                app:argType="string" />
            <argument
                android:name="myFriendName"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/navigateToProgressFragment"
            app:destination="@id/progressFragment"
            app:popUpTo="@id/multiplierFragment">
            <argument
                android:name="userName"
                app:argType="string" />
            <argument
                android:name="friendName"
                app:argType="string" />
        </action>

    </fragment>
    <fragment
        android:id="@+id/multiplayerGamePlayFragment"
        android:name="com.example.colorgame.ui.multiplayerMode.MultiplayerGamePlayFragment"
        android:label="fragment_multiplayer_game_play"
        tools:layout="@layout/fragment_multiplayer_game_play" >
        <argument
            android:name="myUserName"
            app:argType="string" />
        <argument
            android:name="myFriendName"
            app:argType="string" />
        <action
            android:id="@+id/navigateToMultiplayerResultsFragment"
            app:destination="@id/multiplayerResultsFragment"
            app:popUpTo="@id/introFragment">
            <argument
                android:name="myUserName"
                app:argType="string" />
            <argument
                android:name="myFriendName"
                app:argType="string" />
            <argument
                android:name="myScore"
                app:argType="integer"
                android:defaultValue="0" />
            <argument
                android:name="myFriendScore"
                app:argType="integer"
                android:defaultValue="0" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/multiplayerResultsFragment"
        android:name="com.example.colorgame.ui.multiplayerMode.MultiplayerResultsFragment"
        android:label="fragment_multiplayer_results"
        tools:layout="@layout/fragment_multiplayer_results" >
        <argument
            android:name="myUserName"
            app:argType="string" />
        <argument
            android:name="myFriendName"
            app:argType="string" />
        <argument
            android:name="myScore"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="myFriendScore"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/returnToIntroFragment"
            app:destination="@id/introFragment" />
        <action
            android:id="@+id/returnToProgressFragment"
            app:destination="@id/progressFragment" />
    </fragment>
    <fragment
        android:id="@+id/progressFragment"
        android:name="com.example.colorgame.ui.multiplayerMode.ProgressFragment"
        android:label="fragment_progress"
        tools:layout="@layout/fragment_progress" >
        <argument
            android:name="userName"
            app:argType="string" />
        <argument
            android:name="friendName"
            app:argType="string" />
        <action
            android:id="@+id/navigateToMultiplayerGamePlay"
            app:destination="@id/multiplayerGamePlayFragment" />
    </fragment>

</navigation>