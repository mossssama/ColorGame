<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.example.colorgame.ui.intro.IntroFragment"
        android:label="Main"
        tools:layout="@layout/fragment_intro">
        <action
            android:id="@+id/goToGamePlayFragment"
            app:destination="@id/gamePlayFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right">
            <argument
                android:name="gameMode"
                android:defaultValue="hundredSec"
                app:argType="string" />
        </action>
        <argument
            android:name="gameMode"
            android:defaultValue="hundredSec"
            app:argType="string" />
        <action
            android:id="@+id/goToMultiplayerFragment"
            app:destination="@id/multiplayerFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right" />
    </fragment>

    <fragment
        android:id="@+id/gamePlayFragment"
        android:name="com.example.colorgame.ui.mainMode.gamePlay.view.GamePlayFragment"
        android:label="Single player Mode"
        tools:layout="@layout/fragment_game_play">
        <action
            android:id="@+id/goToResultFragment"
            app:destination="@id/resultsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right"
            app:popUpTo="@id/introFragment">
            <argument
                android:name="score"
                android:defaultValue="0"
                app:argType="integer" />
            <argument
                android:name="gameMode"
                android:defaultValue="hundredSec"
                app:argType="string" />
        </action>

        <argument
            android:name="score"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="gameMode"
            android:defaultValue="hundredSec"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/resultsFragment"
        android:name="com.example.colorgame.ui.mainMode.ResultFragment"
        android:label="Result"
        tools:layout="@layout/fragment_result">
        <action
            android:id="@+id/goToScoresHistoryFragment"
            app:destination="@id/scoresHistoryFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right"
            app:popUpTo="@id/introFragment">
            <argument
                android:name="gameMode"
                android:defaultValue="hundredSec"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/goAgainToGamePlayFragment"
            app:destination="@id/gamePlayFragment" >
            <argument
                android:name="gameMode"
                android:defaultValue="hundredSec"
                app:argType="string" />
        </action>
        <argument
            android:name="gameMode"
            android:defaultValue="hundredSec"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/scoresHistoryFragment"
        android:name="com.example.colorgame.ui.mainMode.scoresHistory.view.ScoresHistoryFragment"
        android:label="Scores History"
        tools:layout="@layout/fragment_scores_history">
        <action
            android:id="@+id/goToIntroFragment"
            app:destination="@id/introFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_in_left" />
        <action
            android:id="@+id/returnToGamePlayFragment"
            app:destination="@id/gamePlayFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right"
            app:popUpTo="@id/introFragment"
            app:popUpToInclusive="false">
            <argument
                android:name="gameMode"
                android:defaultValue="hundredSec"
                app:argType="string" />
        </action>
        <argument
            android:name="gameMode"
            android:defaultValue="hundredSec"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/multiplayerFragment"
        android:name="com.example.colorgame.ui.multiplayerMode.MultiplayerSetupFragment"
        android:label="Multiplayer Mode"
        tools:layout="@layout/fragment_multiplier">
        <action
            android:id="@+id/goToMultiplayerGamePlayFragment"
            app:destination="@id/multiplayerGamePlayFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right"
            app:popUpTo="@id/introFragment">
            <argument
                android:name="myUserName"
                app:argType="string" />
            <argument
                android:name="myFriendName"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/goToProgressFragment"
            app:destination="@id/progressFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right"
            app:popUpTo="@id/multiplayerFragment">
            <argument
                android:name="userName"
                app:argType="string" />
            <argument
                android:name="friendName"
                app:argType="string" />
        </action>

    </fragment>
    <fragment
        android:id="@+id/multiplayerGamePlayFragment"
        android:name="com.example.colorgame.ui.multiplayerMode.multiplayerGamePlay.view.MultiplayerGamePlayFragment"
        android:label="Multiplayer Mode"
        tools:layout="@layout/fragment_multiplayer_game_play">
        <argument
            android:name="myUserName"
            app:argType="string" />
        <argument
            android:name="myFriendName"
            app:argType="string" />
        <action
            android:id="@+id/goToMultiplayerResultsFragment"
            app:destination="@id/multiplayerResultsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right"
            app:popUpTo="@id/introFragment">
            <argument
                android:name="myUserName"
                app:argType="string" />
            <argument
                android:name="myFriendName"
                app:argType="string" />
            <argument
                android:name="myScore"
                android:defaultValue="0"
                app:argType="integer" />
            <argument
                android:name="myFriendScore"
                android:defaultValue="0"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/multiplayerResultsFragment"
        android:name="com.example.colorgame.ui.multiplayerMode.multiplayerResult.view.MultiplayerGameResultFragment"
        android:label="Multiplayer Results"
        tools:layout="@layout/fragment_multiplayer_results">
        <argument
            android:name="myUserName"
            app:argType="string" />
        <argument
            android:name="myFriendName"
            app:argType="string" />
        <argument
            android:name="myScore"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="myFriendScore"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/returnToIntroFragment"
            app:destination="@id/introFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right" />
        <action
            android:id="@+id/returnToProgressFragment"
            app:destination="@id/progressFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right" />
    </fragment>

    <fragment
        android:id="@+id/progressFragment"
        android:name="com.example.colorgame.ui.multiplayerMode.ProgressFragment"
        android:label="Multiplayer Mode"
        tools:layout="@layout/fragment_progress">
        <action
            android:id="@+id/goToMultiplayerGamePlay"
            app:destination="@id/multiplayerGamePlayFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right">
        </action>
        <argument
            android:name="userName"
            app:argType="string" />
        <argument
            android:name="friendName"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.colorgame.ui.drawer.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.colorgame.ui.drawer.AccountFragment"
        android:label="Account"
        tools:layout="@layout/fragment_account" />

</navigation>